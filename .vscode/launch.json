{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WellnessPlan API (HTTPS)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/WellnessPlan.WebApi/bin/Debug/net9.0/WellnessPlan.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WellnessPlan.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7296;http://localhost:5288"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "WellnessPlan API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/WellnessPlan.WebApi/bin/Debug/net9.0/WellnessPlan.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WellnessPlan.WebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:6000"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker Debug",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-compose-up",
            "netCore": {
                "appProject": "${workspaceFolder}/src/WellnessPlan.WebApi/WellnessPlan.WebApi.csproj"
            },
            "dockerServerReadyAction": {
                "uriFormat": "%s://${HOST}:${PORT}/swagger"
            }
        }
    ]
}
